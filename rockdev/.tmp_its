/dts-v1/;
/ {
description = "U-Boot FIT source file for arm";

images {
fdt {
data = /incbin/("/media/ssd/FireFly-RV1126JD4/rv1126_rv1109/kernel/arch/arm/boot/dts/rv1126-vision-board2.dtb");
type = "flat_dt";
arch = "arm";
compression = "none";
load = <0xffffff00>;

hash {
algo = "sha256";
};
};

kernel {
data = /incbin/("/media/ssd/FireFly-RV1126JD4/rv1126_rv1109/kernel/arch/arm/boot/zImage");
type = "kernel";
arch = "arm";
os = "linux";
compression = "none";
entry = <0xffffff01>;
load = <0xffffff01>;

hash {
algo = "sha256";
};
};

ramdisk {
data = /incbin/("out/ramdisk");
type = "ramdisk";
arch = "arm";
os = "linux";
compression = "none";
load = <0xffffff02>;

hash {
algo = "sha256";
};
};

resource {
data = /incbin/("/media/ssd/FireFly-RV1126JD4/rv1126_rv1109/kernel/resource.img");
type = "multi";
arch = "arm";
compression = "none";

hash {
algo = "sha256";
};
};
};

configurations {
default = "conf";

conf {
rollback-index = <0x00>;
fdt = "fdt";
kernel = "kernel";
ramdisk = "ramdisk";
multi = "resource";

signature {
algo = "sha256,rsa2048";
padding = "pss";
key-name-hint = "dev";
sign-images = "fdt", "kernel", "ramdisk", "multi";
};
};
};
};
